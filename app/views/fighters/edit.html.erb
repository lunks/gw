<script>
refreshParent();
document.title = " <%= @fighter.show %> "
</script>
<div class="fleet">
  <h2><%= @planet %></h2>
  <h3><%= @fighter.show %></h3>
</div>
<div class="fleet">
    <table>
    <tr><td><b>Armas disponíveis:</b></td><td><b>Armas instaladas:</b></td></tr>
    <%= simple_form_for @fighter, :url => url_for(:controller => 'fighters', :action => 'arm') do |f| %>
    <tr><td>
    <%= f.hidden_field :id %>
    <%= f.input :weapon1_id,
    :collection => @armaments,
    :label_method => :show,
    :value_method => :id,
    :as => :radio,
    :label => false %></td>
    <td> <%= "- #{@fighter.quantity} #{@fighter.weapon1.name}" if @fighter.weapon1 %></td>
    </tr>
    <tr>
    <td>
    <p><%= f.submit 'Armar' %>
    <% end %>
    </td>
    <td>
  <%= simple_form_for @fighter, :url => url_for(:controller => 'fighters', :action => 'disarm') do |f| %>
    <%= f.hidden_field :id %>
    <%= f.submit 'Desarmar' %>
  <% end %>
     </td>
    </tr>
    </table>
</div>
<div class="fleet">
Instruções:<br>
Armar: carrega o grupo com o armamento selecionado<br>
Desarmar: descarrega o armamento do grupo<br>
</div>


